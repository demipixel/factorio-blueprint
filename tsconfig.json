{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "noImplicitAny": false,
    "lib": ["es6", "es2017"],
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true
  }
}
